<div class="row" style="background-color:white;width:75%;margin:0 auto;border-radius:5px;padding:20px;">
  <div class="col-md-12">
    <%= form_for @show do |f| %> 
    <form role="form">     
      <div class="form-group">
        <%= f.label 'Show', class:'event-label', style:"color:black;" %> 
        <%= f.text_area :shows, class: "form-control", placeholder: "Add a new show", rows:'12', autofocus: true %> 
      </div>
      <%= f.submit 'Submit', class:"event-btn btn btn-primary btn-sm"%> 
    </form>
    <% end %>
  </div>
</div>


<div class="row">
  <div class='col-xs-12'>

        <%= form_for @event do |f| %>
        <div class="form-group">
          <div class="control-label col-lg-2 col-md-2 col-sm-2">
              <!--Displays "title" -->
              <%= f.label :event %> 
          </div>
          <div class="col-sm-8">
              <!--Displays input box, ":title" grabs from  -->
              <%= f.text_field :event, class: "form-control", placeholder: "", autofocus: true %>    
          </div>
        </div>
    
       <div class="form-group">
         <div class="col-sm-10 col-lg-offset-2 col-md-offset-2">
            <!--Creates a submit button -->
            <%= f.submit class:"btn btn-primary btn-sm"%> 
         </div>
       </div>
  

        <% end %>

   </div>
</div>

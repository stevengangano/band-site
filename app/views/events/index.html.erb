<div class="row" style="background-color: white; border-radius: 5px;">
	<div class="col-lg-7 col-md-7" style="border-radius: 5px;">
		<p></p>
		<div class="bio">
		<% if current_user %>
			<h4 class="text-center" style="font-weight:bold;"><%= link_to "Click to Add New Event", new_event_path, class:'add-event' %></h5>
		<% end %>
		<% @events.each do |e| %>
			<p> <%= e.event %> </p>
			<% if current_user %>

				<%= link_to 'Edit', edit_event_path(e), class: "edit-btn btn btn-xs btn-primary", style:"margin-right: 5px;" %> 
				<%= link_to 'Delete', event_path(e), method: :delete, data: {confirm: "Are you sure?"}, class: "delete-btn btn btn-xs btn-danger" %>
			<% end %>
			<br>
		<% end %>
		</div>	
	</div>
	<div class="col-lg-5 col-md-5 col-sm-12" style="background-color:#F9F9F9; border-radius: 5px;">
		<div class="contact">
			<%= render 'shared/contact' %>
		</div>
	</div>
</div>






<div class="row" style="background-color: #F9F9F9; border-radius:5px;border: 1px solid #E3E3E3;">
	<div class="col-lg-7 col-md-7" style="background-color: white;border-radius: 5px;">
		<p></p>
		<div class="bio">
		<% if current_user %>
			<h4 class="text-center" style="font-weight:bold;"><%= link_to "Click to Add New Event", new_event_path, class:'add-event' %></h5>
		<% end %>
		<% @events.each do |e| %>
			<p> <%= e.event %> </p>
			<% if current_user %>

				<%= link_to '', edit_event_path(e), class: "glyphicon glyphicon-pencil", style:"margin-right: 5px;" %> 
				<%= link_to '', event_path(e), method: :delete, data: {confirm: "Are you sure?"}, style:'color:red;', class: "glyphicon glyphicon-trash" %>
			<% end %>
			<br>
		<% end %>
		</div>	
	</div>
	<div class="col-lg-5 col-md-5 col-sm-12" style="background-color:#F9F9F9; border-radius: 5px;">
		<div class="contact">
			<%= render 'shared/contact' %>
		</div>
	</div>
</div>

<footer style="position: relative;
              height: 40px;
              right: 0;
              bottom: 0;
              left: 0;
              padding: 1rem;
              text-align: center;
              color:white;
              margin:15px 0;">
